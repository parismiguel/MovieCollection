@model MovieCollection.Models.Genre

@{
    ViewData["Title"] = "Editar Género";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Género</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdGenre" />
        <div class="form-group">
            <label asp-for="GenreName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ImgURL" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ImgURL" class="form-control" />
                <span asp-validation-for="ImgURL" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Modificar" class="btn btn-danger" />
                <a asp-action="Index"><i class="fa fa-undo"></i> Regresar al Listado</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
